@require 'common'

// from http://www.paulirish.com/2012/box-sizing-border-box-ftw/
html
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  font-family monospace
  font-size font-size-base
  color text-color

img
  max-width 100%

a
  text-decoration none
  color text-color-accent

  &.active
    color lighten(text-color-accent, 9%)

  &:hover
    color darken(text-color-accent, 9%)

section
  padding gutter 0
